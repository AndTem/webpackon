{
  "name": "@webpackon/dev-server",
  "version": "1.0.0",
  "description": "Webpack 4 config for SPA",
  "author": "And_tem",
  "browser": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "tsc": "../../node_modules/.bin/tsc",
    "remove-build": "../../node_modules/.bin/rimraf lib/*",
    "babel-transform": "../../node_modules/.bin/babel lib --out-dir lib",
    "build": "yarn run remove-build && yarn run tsc && yarn run babel-transform",
    "lint:fix": "eslint ./src --fix --ext .ts",
    "lint:types": "tsc --noEmit",
    "tests": "jest",
    "linting": "yarn run lint:fix && yarn run lint:types && yarn run tests",
    "release": "yarn run linting && yarn run build && npm publish"
  },
  "dependencies": {},
  "peerDependencies": {
    "webpack": "5.x.x",
    "webpack-dev-server": "4.x.x"
  }
}
