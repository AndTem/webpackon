{
  "name": "@webpackon/base-config",
  "version": "0.1.0",
  "description": "Webpackon base config",
  "homepage": "https://github.com/AndTem/webpackon/tree/master/packages/base-config#Readme",
  "browser": "src/index.ts",
   "types": "src/index.ts",
   "main": "lib/index.js",
  "scripts": {
    "remove-build": "rimraf lib/*",
    "prebuild": "yarn run remove-build",
    "build": "yarn run tsc -p ./tsconfig.json",
    "postbuild": "yarn run copy-files && yarn run modify-package",
    "copy-files": "rep-commander copyCommonFiles",
    "modify-package": "rep-commander modifyPackageJSON",
    "lint:fix": "eslint ./src --fix --ext .ts",
    "lint:types": "tsc --noEmit",
    "tests": "jest",
    "linting": "yarn run lint:fix && yarn run lint:types && yarn run tests",
    "release": "yarn run linting && yarn run build && npm publish"
  },
  "dependencies": {
    "@webpackon/core": "^0.1.0",
    "@webpackon/use-babel": "^0.1.0",
    "@webpackon/use-images": "^0.1.0",
    "@webpackon/use-fonts": "^0.1.0",
    "@webpackon/use-html": "^0.1.0",
    "@webpackon/use-dev-server": "^0.1.0",
    "@webpackon/use-optimization": "^0.1.0",
    "@webpackon/use-css": "^0.1.0",
    "@types/webpack": "5.28.0"
  },
  "peerDependencies": {
    "webpack": "5.x.x",
    "webpack-dev-server": "4.x.x",
    "webpack-cli": "4.x.x"
  }
}
